@using Sandbox.UI;
@using Sandbox;
@using System;
@using System.Collections.Generic;
@using System.Linq;

@namespace MyGame

<root>
     <panel class="navpanel">
	
	 </panel>
     <panel class="container">
	
	 </panel>
</root>

@code
{
    public static TabMenu Current;


    public bool IsOpen
    {
        get => HasClass( "open" );
        set
        {
            SetClass( "open", value );
        }
    }

    protected override void OnAfterTreeRender( bool firstTime )
    {
        base.OnAfterTreeRender( firstTime );
        
        Current = this;
    }

    public override void Tick()
    {
        if ( Sandbox.Input.Down( "Score" ))
        { Open(); }else{ Close(); }

	}

	void Open()
	{
		AddClass( "open" );
	}

	void Close()
	{
		RemoveClass( "open" );
	}

}
